{
  "name": "Wiki.js",
  "description": "An open source, modern and powerful wiki app built on Node.js, Git and Markdown.",
  "repository": "https://github.com/requarks/wiki-heroku",
  "logo": "https://raw.githubusercontent.com/Requarks/wiki-site/master/assets/favicons/android-icon-144x144.png",
  "keywords": ["node", "wiki", "heroku"],
  "image": "heroku/nodejs",
  "website": "https://wiki.requarks.io/",
  "success_url": "/",
  "addons": [
    {
      "plan": "mongolab:sandbox",
      "as": "MongoDB"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "HEROKU": {
      "description": "Tell Wiki.js setup this is an Heroku instance.",
      "value": true
    }
  }
}